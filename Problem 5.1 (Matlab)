n=-1:0.01:199;
x = input('Input a function, x(n): ');

for i=1:19901
    
    if i==1
        X(i)=x(i+100);
        Y(i)=-1.5*x(i+100)+2*x(i+200)-0.5*x(i+300);
        
    elseif i>1 && i<19800
        X(i)=x(i+100);
        Y(i)=0.5*x(i+200)-0.5*x(i);
        
    elseif i==19901
        X(i)=x(i+100);
        Y(i)=1.5*x(i+100)-2*x(i)+0.5*x(i-100);
        
    else
        X(i)=x(i+100);
        Y(i)=NaN;
        
        end
end

n = 0:0.01:199;
plot(n,X,'-ob','markersize',0.5,'markerfacecolor','b'), hold on,
plot(n,Y,'-or','markersize',0.5,'markerfacecolor','r'),
axis tight
grid on
xlabel 'n'; ylabel 'x(n) and y(n)'; title 'Graphs of x(n) & y(n)';
legend('x(n)','y(n)');
